modules = ["nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ProofPoll Lite Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Server"

[[workflows.workflow]]
name = "Production Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next build"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "ProofPoll Lite Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf .next node_modules/.cache .turbo && npx prisma generate && npx next dev --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Production Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next build && npx prisma generate && npx next start -p 5001"
waitForPort = 5001

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
build = ["sh", "-c", "npx next build"]
run = ["sh", "-c", "npx prisma generate && npx next start -p 5000"]
deploymentTarget = "cloudrun"
